.side
  %header.side__username
    .top
      .top__name
        = current_user.name
      .top__icons
        = link_to new_group_path, class: "top__icons--icon" do
          = icon("far","edit",class: "top__icons--edit")
        = link_to edit_user_path(current_user.id), class:"top__icons--icon" do
          = icon("fas","cog",class: "top__icons--gear")
  .side__grouplist
    - current_user.groups.each do |group|
      .side__group
        = link_to group_messages_path(group.id),class:"side__group--link" do
          .side__group--group-name
            = group.name
          .side__group--new-message
            = group.show_last_message

